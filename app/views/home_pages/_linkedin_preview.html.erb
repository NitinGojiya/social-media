
    <!-- Main card container for the LinkedIn post -->
    <div class="bg-white rounded-lg shadow-md max-w-xl mx-auto border border-gray-200 overflow-hidden">

        <!-- Post Header -->
        <div class="flex items-center space-x-3 p-4">
            <!-- Profile Picture -->
            <div class="flex-shrink-0">
                <img class="h-10 w-10 rounded-full" src="<%= @user.linkedin_profiles.last.profile_picture_url %>" alt="User Profile Picture">
            </div>

            <!-- User Info and Timestamp -->
            <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-gray-900 truncate"><%= @user.linkedin_profiles.last.profile_name %></p>
                <p class="text-xs text-gray-600 truncate"><%= @user.linkedin_profiles.last.headline %></p>
                <p class="text-xs text-gray-500 mt-1">Just now &bull; <span class="text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline-block" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 2a8 8 0 100 16 8 8 0 000-16z" />
                        <path fill-rule="evenodd" d="M10 3a7 7 0 100 14A7 7 0 0010 3zM9 10a1 1 0 112 0 1 1 0 01-2 0z" clip-rule="evenodd" />
                    </svg>
                </span></p>
            </div>

            <!-- Options icon (ellipsis) -->
            <button class="p-2 text-gray-500 hover:text-gray-900 transition-colors rounded-full hover:bg-gray-100 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                </svg>
            </button>
        </div>

        <!-- Post Text Content -->
        <div class="px-4 pb-4 text-sm text-gray-800 leading-relaxed">
            <p id="previewCaption" class="previewCaption">
                Excited to share a sneak peek of our latest project! Our team has been working hard on a new feature that will revolutionize how we interact with data. It's all about making complex information accessible and actionable for everyone.
            </p>

        </div>

        <!-- Main Post Image -->
        <div class="bg-gray-100">
            <!-- The image URL is a placeholder to simulate the original post's content -->
            <img class="w-full previewImage" src="https://placehold.co/800x450/e2e8f0/334155?text=Your+LinkedIn+Post+Image+load..." alt="A dashboard with data visualizations and a colorful vector illustration of a bird">
        </div>

        <!-- Post Footer with Reactions and Comments -->
        <div class="p-4">
            <!-- Reactions and Comments count row -->
            <div class="flex items-center justify-between mb-2 text-gray-600 text-sm">
                <div class="flex items-center space-x-1">
                    <!-- Placeholder for reaction icons -->
                    <img src="https://static-exp1.licdn.com/sc/h/d31nc07l64a9844g2f5d94t3n" class="w-4 h-4" alt="Like reaction icon">
                    <span class="ml-1 text-gray-600 hover:text-blue-600 cursor-pointer hover:underline">0 Likes</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="hover:text-blue-600 cursor-pointer hover:underline">0 Comments</span>
                    <span>&bull;</span>
                    <span class="hover:text-blue-600 cursor-pointer hover:underline">0 Share</span>
                </div>
            </div>

            <!-- Interaction Buttons -->
            <div class="grid grid-cols-3 gap-1 border-t border-gray-200 pt-2">

                <!-- Like Button -->
                <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21H6a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v3z" />
                    </svg>
                    <span class="font-medium text-sm">Like</span>
                </button>

                <!-- Comment Button -->
                <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    <span class="font-medium text-sm">Comment</span>
                </button>

                <!-- Share Button -->
                <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.887 12.876 9 12.433 9 12c0-.433-.113-.876-.316-1.342l-1.354-2.709a3.5 3.5 0 016.74 0l-1.355 2.709zM15.316 10.658c-.203.466-.316.909-.316 1.342 0 .433.113.876.316 1.342l1.354 2.709a3.5 3.5 0 00-6.74 0l-1.355-2.709z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12a3 3 0 116 0 3 3 0 01-6 0z" />
                    </svg>
                    <span class="font-medium text-sm">Share</span>
                </button>
            </div>
        </div>
    </div>