
    <!-- Main card container for the Instagram post -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden max-w-sm mx-auto my-8 border border-gray-200">
        <!-- Post Header -->
        <div class="flex items-center justify-between p-4">
            <!-- Profile Info -->
            <div class="flex items-center space-x-2">
                <!-- Profile picture (using a placeholder) -->
                <div class="flex-shrink-0">
                    <img class="h-8 w-8 rounded-full" src="https://placehold.co/32x32/1d4ed8/ffffff?text=U" alt="Profile Picture">
                </div>
                <!-- Username -->
                <p class="text-sm font-semibold text-gray-900">niti_nwork</p>
            </div>
            <!-- Options icon (ellipsis) -->
            <button class="text-gray-500 hover:text-gray-900 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                </svg>
            </button>
        </div>

        <!-- Main Image -->
        <div class="bg-black">
            <!-- The image URL is a placeholder to simulate the original post's content -->
            <img class="w-full previewImage"  src="https://placehold.co/600x600/000000/34d399?text=your+post" alt="A colorful vector illustration of a bird">
        </div>

        <!-- Post Footer -->
        <div class="p-4">
            <!-- Interaction Icons -->
            <div class="flex items-center justify-between mb-2">
                <!-- Left-side icons: Like, Comment, Share -->
                <div class="flex space-x-4">
                    <!-- Like icon (heart) -->
                    <button class="text-gray-700 hover:text-red-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    </button>
                    <!-- Comment icon -->
                    <button class="text-gray-700 hover:text-blue-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                    </button>
                    <!-- Share icon -->
                    <button class="text-gray-700 hover:text-green-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                    </button>
                </div>
                <!-- Right-side icon: Bookmark/Save -->
                <button class="text-gray-700 hover:text-purple-500 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                    </svg>
                </button>
            </div>

            <!-- Likes text -->
            <p class="text-sm font-medium text-gray-700 mb-1">Be the first to like this</p>

            <!-- Time since post -->
            <p class="text-xs text-gray-500">Just now</p>
        </div>
    </div>