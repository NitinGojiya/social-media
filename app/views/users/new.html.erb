<% content_for :title, "Create Account | Post Universal" %>
<div class="flex flex-col md:flex-row items-center justify-center min-h-screen bg-gray-50 px-4">

  <!-- Left Column: Signup Form -->
  <div class=" p-8 rounded-lg  w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Create an Account</h2>

    <%= form_with model: @user, local: true do |form| %>

      <!-- Email Field -->
      <div class="mb-5">
        <label for="email" class="block text-gray-700 text-sm font-medium mb-2">Email Address</label>
        <%= form.email_field :email_address, placeholder: "Enter your email", required: true,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#38bef8] focus:border-transparent transition duration-200 ease-in-out" %>
      </div>

      <!-- Password Field -->
      <div class="mb-5">
        <label for="password" class="block text-gray-700 text-sm font-medium mb-2">Password</label>
        <%= form.password_field :password, placeholder: "Enter your password", required: true,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#38bef8] focus:border-transparent transition duration-200 ease-in-out" %>
      </div>

      <!-- Confirm Password Field -->
      <div class="mb-6">
        <label for="password_confirmation" class="block text-gray-700 text-sm font-medium mb-2">Confirm Password</label>
        <%= form.password_field :password_confirmation, placeholder: "Confirm password", required: true,
          class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#38bef8] focus:border-transparent transition duration-200 ease-in-out" %>
      </div>

      <!-- Signup Button -->
      <%= form.submit "Sign up", class: "w-full cursor-pointer cust-btn px-5 py-2.5 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#c17962] focus:ring-opacity-50" %>

      <!-- Error Messages -->
      <% if @user.errors.any? %>
        <div class="mb-4 p-4 bg-red-100 text-red-700 rounded mt-4">
          <ul class="list-decimal list-inside space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <% end %>

    <!-- Divider -->
    <div class="flex items-center my-6">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="mx-3 text-gray-500 text-sm uppercase font-medium">or</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <!-- Google Signup Button -->
    <%= link_to "/auth/google_oauth2", class: "w-full flex items-center justify-center gap-2 px-4 py-3 border border-gray-300 rounded-md bg-white hover:bg-gray-100 transition" do %>
      <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"/><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"/><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"/><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"/><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"/></g></svg>
      Sign up with Google
    <% end %>

    <!-- Login Link -->
    <p class="text-center text-gray-600 text-sm mt-6">
      Already have an account?
      <%= link_to "Log In", new_session_path, class: "text-[#38bef8] hover:underline font-medium" %>
    </p>
  </div>

  <!-- Right Column: Image Grid -->
  <div class="hidden md:grid md:grid-cols-2 md:grid-rows-2 md:gap-4 md:ml-10">
    <div class="row-span-2">
      <img src="https://images.unsplash.com/photo-1491951931722-5a446214b4e2?q=80&w=767&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Portrait" class="w-full h-full object-cover rounded-lg shadow-md">
    </div>
    <div>
      <img src="https://images.unsplash.com/photo-1683721003111-070bcc053d8b?q=80&w=1400&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Nature" class="w-full h-full object-cover rounded-lg shadow-md">
    </div>
    <div>
      <img src="https://images.unsplash.com/photo-1689004624325-6edf074228dd?q=80&w=1332&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="City" class="w-full h-full object-cover rounded-lg shadow-md">
    </div>
  </div>

</div>
