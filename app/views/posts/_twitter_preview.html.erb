<!-- Tweet Card -->
<div data-controller="twitter-preview"
     class="bg-white rounded-xl shadow-lg max-w-2xl w-full p-4 md:p-6 border border-gray-200">

  <!-- User Info Section -->
  <div class="flex items-center space-x-3 mb-4">
    <!-- Profile Picture -->
    <div class="bg-blue-500 text-white rounded-full h-12 w-12 flex items-center justify-center font-bold text-xl">
      n
    </div>
    <!-- Username and Handle -->
    <div class="flex-grow">
      <div class="font-bold text-gray-900"><%= @user.twitter_profile&.name %></div>
      <div class="text-sm text-gray-500">@<%= @user.twitter_profile&.nickname %> · just now</div>
    </div>
  </div>

  <!-- Tweet Content -->
  <p data-twitter-preview-target="caption"
     class="text-gray-800 mb-4 leading-relaxed">
  </p>

  <!-- Media Wrapper -->
  <div data-twitter-preview-target="mediaWrapper"
       class="w-full relative overflow-hidden rounded-lg bg-gray-200 flex items-center justify-center">
    <img src="https://placehold.co/800x450/e2e8f0/334155?text=Your+twitter+Post+Image..."
         class="w-full h-auto object-cover" />
  </div>

  <!-- Dots for carousel -->
  <div data-twitter-preview-target="dots"
       class="flex justify-center space-x-1 mt-2"></div>

  <!-- Navigation Arrows -->
  <button data-action="click->twitter-preview#prev"
          class="hidden absolute left-2 top-1/2 -translate-y-1/2 bg-black bg-opacity-40 text-white rounded-full w-8 h-8 flex items-center justify-center">
    ‹
  </button>
  <button data-action="click->twitter-preview#next"
          class="hidden absolute right-2 top-1/2 -translate-y-1/2 bg-black bg-opacity-40 text-white rounded-full w-8 h-8 flex items-center justify-center">
    ›
  </button>

  <!-- Actions Section -->
  <div class="flex justify-between items-center text-gray-500 mt-4">
    <button class="flex items-center space-x-1 p-2 rounded-full hover:bg-gray-100 transition-colors">
      <i class="far fa-comment text-lg"></i>
    </button>
    <button class="flex items-center space-x-1 p-2 rounded-full hover:bg-gray-100 transition-colors">
      <i class="fas fa-retweet text-lg"></i>
    </button>
    <button class="flex items-center space-x-1 p-2 rounded-full hover:bg-gray-100 transition-colors">
      <i class="far fa-heart text-lg"></i>
    </button>
    <button class="flex items-center space-x-1 p-2 rounded-full hover:bg-gray-100 transition-colors">
      <i class="fas fa-chart-bar text-lg"></i>
    </button>
  </div>
</div>
