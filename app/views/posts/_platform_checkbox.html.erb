<div class="flex items-center gap-3 p-3 border rounded-lg shadow-sm hover:shadow-md transition cursor-pointer">
  <input
    type="checkbox"
    name="<%= name %>"
    id="<%= name %>"
    class="form-checkbox h-5 w-5 text-blue-600 rounded"
  />
  <label for="<%= name %>" class="flex items-center gap-2 text-lg font-medium text-gray-700 cursor-pointer">
    <i class="fab fa-<%= icon %> <%= color %> text-xl"></i>
    <%= platform %>
  </label>
</div>
