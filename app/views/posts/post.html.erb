<!-- Header -->
<div class="w-full max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold">Posts</h1>
  <p class="text-gray-500 mb-4">Manage all your posts in one place</p>
      <!-- Search Bar -->
  <div class="mt-4">
    <input type="text" placeholder="Search posts" class="input input-bordered w-full" />
  </div>
  <!-- Tabs -->
  <div role="tablist" class="tabs tabs-bordered">
    <input type="radio" name="post_tabs" role="tab" class="tab" aria-label="All" checked />
    <div role="tabpanel" class="tab-content p-4">All posts will appear here...</div>

    <input type="radio" name="post_tabs" role="tab" class="tab" aria-label="Scheduled" />
    <div role="tabpanel" class="tab-content p-4 space-y-3"><%= render 'scheduled_post' %></div>


    <input type="radio" name="post_tabs" role="tab" class="tab" aria-label="Published" />
    <div role="tabpanel" class="tab-content p-4 space-y-3"><%= render 'posted_post' %></div>
  </div>

</div>
