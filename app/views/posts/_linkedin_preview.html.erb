<div class="bg-white rounded-lg shadow-md max-w-xl mx-auto border border-gray-200 overflow-hidden"
     data-controller="linkedin-preview">

  <!-- Post Header -->
  <div class="flex items-center space-x-3 p-4">
    <div class="flex-shrink-0">
      <img class="h-10 w-10 rounded-full"
           src="<%= @user.linkedin_profiles.last&.profile_picture_url %>"
           alt="User Profile Picture">
    </div>

    <div class="flex-1 min-w-0">
      <p class="text-sm font-semibold text-gray-900 truncate">
        <%= @user.linkedin_profiles.last&.profile_name %>
      </p>
      <p class="text-xs text-gray-600 truncate">
        <%= @user.linkedin_profiles.last&.headline %>
      </p>
      <p class="text-xs text-gray-500 mt-1">Just now &bull;
        <span class="text-blue-600">
          <svg xmlns="http://www.w3.org/2000/svg"
               class="h-3 w-3 inline-block" viewBox="0 0 20 20"
               fill="currentColor">
            <path d="M10 2a8 8 0 100 16 8 8 0 000-16z" />
            <path fill-rule="evenodd"
                  d="M10 3a7 7 0 100 14A7 7 0 0010 3zM9 10a1 1 0 112 0 1 1 0 01-2 0z"
                  clip-rule="evenodd" />
          </svg>
        </span>
      </p>
    </div>

    <button
      class="p-2 text-gray-500 hover:text-gray-900 transition-colors rounded-full hover:bg-gray-100 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg"
           class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
      </svg>
    </button>
  </div>

  <!-- Post Text Content -->
  <div class="px-4 pb-4 text-sm text-gray-800 leading-relaxed">
    <p data-linkedin-preview-target="caption">Write something...</p>
  </div>

  <!-- Media Wrapper for Stimulus -->
  <div data-linkedin-preview-target="mediaWrapper" class="bg-black overflow-hidden h-[500px]"></div>

  <!-- Post Footer -->
  <div class="p-4">
    <div class="flex items-center justify-between mb-2 text-gray-600 text-sm">
      <div class="flex items-center space-x-1">
        <img src="https://static-exp1.licdn.com/sc/h/d31nc07l64a9844g2f5d94t3n" class="w-4 h-4" alt="Like icon">
        <span class="ml-1 hover:text-blue-600 cursor-pointer hover:underline">0 Likes</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="hover:text-blue-600 cursor-pointer hover:underline">0 Comments</span>
        <span>&bull;</span>
        <span class="hover:text-blue-600 cursor-pointer hover:underline">0 Share</span>
      </div>
    </div>

    <div class="grid grid-cols-3 gap-1 border-t border-gray-200 pt-2">
      <!-- Like -->
      <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21H6a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v3z" />
        </svg>
        <span class="font-medium text-sm">Like</span>
      </button>

      <!-- Comment -->
      <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="font-medium text-sm">Comment</span>
      </button>

      <!-- Share -->
      <button class="flex items-center justify-center p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M8.684 13.342C8.887 12.876 9 12.433 9 12c0-.433-.113-.876-.316-1.342l-1.354-2.708a2 2 0 10-1.732 0l-1.354 2.708A5.992 5.992 0 007 12c0 .433.113.876.316 1.342l1.354 2.708a2 2 0 001.732 0l1.354-2.708z" />
        </svg>
        <span class="font-medium text-sm">Share</span>
      </button>
    </div>
  </div>
</div>
